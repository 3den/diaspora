- content_for :page_title do
  Your aspects

- content_for :break_the_mold do
  width:100%;


%h2{:style => "position:relative;"}
  .right
    = link_to "New Aspect", "#", :class => "button"
  Your aspects

  
%br
%br

#aspect_canvas{:style => "margin-left:40px"}
  = @aspects.each do |aspect|
    .aspect_collection
      = link_to contacts_path(:a_id => aspect.id) do
        .avatar_collage
          = aspect.contacts.includes(:person).limit(3).all.each do |contact|
            = person_image_tag(contact.person, :size => :thumb_medium, :title => false)

      .aspect_info
        %h4
          = aspect.name
        %p
          = aspect.contacts.count
          contacts
